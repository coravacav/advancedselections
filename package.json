{
    "name": "advancedselections",
    "displayName": "Advanced Selections",
    "description": "Advanced selections, pseudo vim-like",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/coravacav/advancedselections.git"
    },
    "homepage": "https://github.com/coravacav/advancedselections",
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Keymaps"
    ],
    "publisher": "stefanbt",
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "advancedselections.selectInnerWord",
                "title": "Select Inner Word"
            },
            {
                "command": "advancedselections.selectOuterWord",
                "title": "Select Outer Word"
            },
            {
                "command": "advancedselections.selectInnerDoubleQuote",
                "title": "Select Inner Double Quote"
            },
            {
                "command": "advancedselections.selectOuterDoubleQuote",
                "title": "Select Outer Double Quote"
            },
            {
                "command": "advancedselections.selectInnerSingleQuote",
                "title": "Select Inner Single Quote"
            },
            {
                "command": "advancedselections.selectOuterSingleQuote",
                "title": "Select Outer Single Quote"
            },
            {
                "command": "advancedselections.selectInnerBacktick",
                "title": "Select Inner Backtick"
            },
            {
                "command": "advancedselections.selectOuterBacktick",
                "title": "Select Outer Backtick"
            },
            {
                "command": "advancedselections.selectInnerParenthesis",
                "title": "Select Inner Parenthesis"
            },
            {
                "command": "advancedselections.selectOuterParenthesis",
                "title": "Select Outer Parenthesis"
            },
            {
                "command": "advancedselections.selectInnerCurlyBrace",
                "title": "Select Inner Curly Brace"
            },
            {
                "command": "advancedselections.selectOuterCurlyBrace",
                "title": "Select Outer Curly Brace"
            },
            {
                "command": "advancedselections.selectInnerSquareBracket",
                "title": "Select Inner Square Bracket"
            },
            {
                "command": "advancedselections.selectOuterSquareBracket",
                "title": "Select Outer Square Bracket"
            },
            {
                "command": "advancedselections.selectInnerAngleBracket",
                "title": "Select Inner Angle Bracket"
            },
            {
                "command": "advancedselections.selectOuterAngleBracket",
                "title": "Select Outer Angle Bracket"
            }
        ],
        "keybindings": [
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerWord",
                "key": "ctrl+h i w",
                "mac": "cmd+h cmd+i cmd+w"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterWord",
                "key": "ctrl+h o w",
                "mac": "cmd+h cmd+o cmd+w"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerDoubleQuote",
                "key": "ctrl+h i shift+'",
                "mac": "cmd+h cmd+i cmd+shift+'"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterDoubleQuote",
                "key": "ctrl+h o shift+'",
                "mac": "cmd+h cmd+o cmd+shift+'"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerSingleQuote",
                "key": "ctrl+h i '",
                "mac": "cmd+h cmd+i cmd+'"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterSingleQuote",
                "key": "ctrl+h o '",
                "mac": "cmd+h cmd+o cmd+'"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerBacktick",
                "key": "ctrl+h i `",
                "mac": "cmd+h cmd+i cmd+`"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterBacktick",
                "key": "ctrl+h o `",
                "mac": "cmd+h cmd+o cmd+`"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerParenthesis",
                "key": "ctrl+h i shift+9",
                "mac": "cmd+h cmd+i cmd+shift+9"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterParenthesis",
                "key": "ctrl+h o shift+9",
                "mac": "cmd+h cmd+o cmd+shift+9"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerParenthesis",
                "key": "ctrl+h i shift+8",
                "mac": "cmd+h cmd+i cmd+shift+8"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterParenthesis",
                "key": "ctrl+h o shift+8",
                "mac": "cmd+h cmd+o cmd+shift+8"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerCurlyBrace",
                "key": "ctrl+h i shift+]",
                "mac": "cmd+h cmd+i cmd+shift+]"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterCurlyBrace",
                "key": "ctrl+h o shift+]",
                "mac": "cmd+h cmd+o cmd+shift+]"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerCurlyBrace",
                "key": "ctrl+h i shift+[",
                "mac": "cmd+h cmd+i cmd+shift+["
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterCurlyBrace",
                "key": "ctrl+h o shift+[",
                "mac": "cmd+h cmd+o cmd+shift+["
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerSquareBracket",
                "key": "ctrl+h i ]",
                "mac": "cmd+h cmd+i cmd+]"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterSquareBracket",
                "key": "ctrl+h o ]",
                "mac": "cmd+h cmd+o cmd+]"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerSquareBracket",
                "key": "ctrl+h i [",
                "mac": "cmd+h cmd+i cmd+["
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterSquareBracket",
                "key": "ctrl+h o [",
                "mac": "cmd+h cmd+o cmd+["
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerAngleBracket",
                "key": "ctrl+h i shift+,",
                "mac": "cmd+h cmd+i cmd+shift+,"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterAngleBracket",
                "key": "ctrl+h o shift+,",
                "mac": "cmd+h cmd+o cmd+shift+,"
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectInnerAngleBracket",
                "key": "ctrl+h i shift+.",
                "mac": "cmd+h cmd+i cmd+shift+."
            },
            {
                "when": "editorTextFocus",
                "command": "advancedselections.selectOuterAngleBracket",
                "key": "ctrl+h o shift+.",
                "mac": "cmd+h cmd+o cmd+shift+."
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    }
}
